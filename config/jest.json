{
	"rootDir": "../",
	"verbose": true,
	"preset": "ts-jest/presets/default-esm",
	"globals": {
		"ts-jest": {
			"useESM": true
		}
	},
	"collectCoverage": true,
	"collectCoverageFrom": ["source/**/*.ts"],
	"testTimeout": 30000,
	"testMatch": ["**/test/**/*-test.[jt]s"],
	"moduleFileExtensions": ["js", "json", "ts"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	}
}
